---
import Layout from "../layouts/Layout.astro";
import HimaCodeExample from "/HimaCodeExample.png";
import { Nav } from "../components/Nav";
import "../styles/hero.css";
---

<Layout title="Iced Tea Dev">
	<main class="">
		<Nav client:load />
		<div
			class="flex h-[95vh] w-full flex-col items-center justify-center gap-4"
		>
			<div class="flex w-full flex-col items-center justify-center gap-1">
				<h1
					class="flex flex-col items-center gap-2 text-5xl font-semibold sm:flex-row"
				>
					<div>Hello I'm</div>
					<div className="flex flex-row">
						<div class="p-1">
							<div
								class="bg-gradient-to-tr from-[#21D4FD] to-[#B721FF] bg-clip-text font-jetbrains-mono text-transparent"
								id="typewriter"
							>
								IcedTeaDev
							</div>
						</div>
					</div>
				</h1>
				<p class="text-xl">I'm a full-stack developer</p>
			</div>
			<button
				class="rounded-md border border-slate-100 p-2 font-semibold hover:bg-slate-100 hover:text-slate-950"
			>
				Contact Me
			</button>
		</div>
		<div class="flex flex-col gap-8 px-8" id="projects"></div>
	</main>
</Layout>

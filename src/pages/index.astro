---
import Layout from "../layouts/Layout.astro";
import HimaCodeExample from "/HimaCodeExample.png";
import Nav from "../components/Nav";
import "../styles/hero.css";
---

<Layout title="Iced Tea Dev">
	<main class="">
		<Nav client:load />

		<div
			class="flex h-[95vh] w-full flex-col items-center justify-center gap-4"
		>
			<div class="flex w-full flex-col items-center justify-center gap-1">
				<h1
					class="flex flex-col items-center gap-2 text-5xl font-semibold sm:flex-row"
				>
					<div>Hello I'm</div>
					<div className="flex flex-row">
						<div class="p-1">
							<div
								class="bg-gradient-to-r from-indigo-500 to-indigo-200 bg-clip-text font-jetbrains-mono text-transparent"
								id="typewriter"
							>
								IcedTeaDev
							</div>
						</div>
					</div>
				</h1>
				<p class="text-xl">I'm a full-stack developer</p>
			</div>
			<button
				class="rounded-md border border-slate-100 p-2 font-semibold hover:bg-slate-100 hover:text-slate-950"
			>
				Contact Me
			</button>
		</div>
		<div class="flex flex-col gap-8 px-8" id="projects">
			<div class="flex items-center justify-center">
				<h2 class="text-4xl font-semibold">projects</h2>
			</div>
			<div class="grid grid-cols-2 justify-items-center p-8">
				<img
					src={HimaCodeExample}
					alt="Hima Code Example"
					class="w-3/4 rounded-lg"
				/>

				<div class="max-w-lg">
					<div class="flex flex-col gap-4 pt-2">
						<div class="flex flex-col gap-1">
							<h3 class="text-3xl font-semibold">// Hima High School</h3>
							<h4 class="text-semibold">Cardano NFT Project</h4>
						</div>
						<p>
							I was the only developer on this project. I handled everything
							from the website to the database. I developed minting & art
							generation scripts, discord bots, and more.
						</p>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Iced Tea Dev">
	<main>
		<div class="flex h-screen w-full flex-col items-center justify-center">
			<h1 class="flex gap-2 font-lexend text-5xl font-bold">
				Hello I'm
				<div class="bg-slate-950 p-1">
					<div
						class="bg-gradient-to-r from-indigo-600 to-indigo-300 bg-clip-text font-jetbrains-mono text-transparent"
						id="typewriter"
					>
						Iced Tea Dev
					</div>
				</div>
			</h1>
		</div>
	</main>
</Layout>
<style>
	#typewriter {
		width: 12ch;
		animation: typing 1500ms steps(12), blink 0.5s step-end infinite alternate;
		white-space: nowrap;
		overflow: hidden;
		border-right: 3px solid white;
	}

	@keyframes typing {
		0% {
			width: 0ch;
		}
		100% {
			width: 12ch;
		}
	}

	#typewriter::after {
		content: "Archer";
	}

	@keyframes blink {
		50% {
			border-color: transparent;
		}
	}
</style>
